<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OrderApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OrderApp"
    xmlns:view="clr-namespace:OrderApp.View"
    xmlns:viewmodel="clr-namespace:OrderApp.ViewModel"
    x:DataType="viewmodel:ShellViewModel"
     Shell.TitleColor="{DynamicResource TextColor}"
     Shell.BackgroundColor="{DynamicResource BackgroundColor}"
     Shell.ForegroundColor="{DynamicResource TextColor}" 
    FlowDirection="{Binding AppFlowDirection}"
    Title="OrderApp">
    
    

    <!-- Each page gets its own FlyoutItem -->
    <FlyoutItem Title="{DynamicResource Orders}" Icon="monkey.png">
        <ShellContent ContentTemplate="{DataTemplate view:Orders}" />
    </FlyoutItem>

    <FlyoutItem Title="{DynamicResource Clients}" Icon="elephant.png">
        <ShellContent ContentTemplate="{DataTemplate view:Clients}" />
    </FlyoutItem>

    <FlyoutItem Title="{DynamicResource Products}" Icon="elephant.png">
        <ShellContent ContentTemplate="{DataTemplate view:Products}" />
    </FlyoutItem>

    <FlyoutItem Title="{DynamicResource Events}" Icon="elephant.png">
        <ShellContent ContentTemplate="{DataTemplate view:Events}" />
    </FlyoutItem>
    
    <Shell.FlyoutFooter>
        <Grid Padding="10" RowDefinitions="Auto, Auto, Auto" >

            <Button Grid.Row="0" Text="{DynamicResource SwitchTheme}"
                Command="{Binding SwitchThemeCommand}" HeightRequest="40"
                HorizontalOptions="Center" Padding="20,0,20,0" Margin="0,0,0,10"/>

            <Button Grid.Row="1"
            Text="{DynamicResource LanguageButtonText}"
            Command="{Binding SwitchLanguageCommand}" HeightRequest="40"
            HorizontalOptions="Center" Padding="20,0,20,0" Margin="0,0,0,10"/>

            <Button
                Grid.Row="2"
                Text="{DynamicResource Logout}"
                BackgroundColor="Transparent"
                TextColor="Red"
                Command="{Binding LogoutCommand}"/>
        </Grid>
    </Shell.FlyoutFooter>

</Shell>
