<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrderApp.View.Login"
             xmlns:model="clr-namespace:OrderApp.Model"
             xmlns:viewmodel="clr-namespace:OrderApp.ViewModel"
             x:DataType="viewmodel:LoginViewModel"
             BackgroundColor="{DynamicResource BackgroundColor}"
             FlowDirection="{Binding AppFlowDirection}"
             Title="{Binding Title}" >
    <Grid RowDefinitions="Auto, *, Auto, Auto,Auto" ColumnDefinitions="*,*" Padding="40" >

        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
            </Style>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
            </Style>
        </Grid.Resources>

        <Label  Text="{DynamicResource EnterCredential}" FontSize="30" WidthRequest="160" VerticalOptions="Center"/>

        <ScrollView Grid.Row="1" Grid.ColumnSpan="2">
            <VerticalStackLayout Padding="10">
                <Label Text="{DynamicResource UserName}"/>
                <Entry Text="{Binding User.UserName}" PlaceholderColor="{DynamicResource TextColor}"  Placeholder="{DynamicResource UserName}"/>

                <Label Text="{DynamicResource Email}" Margin="0,10,0,0"/>
                <Entry Keyboard="Email" Text="{Binding User.Email}"  PlaceholderColor="{DynamicResource NotSelectedColor}"  Placeholder="{DynamicResource Email}"/>
                <Label Text="{Binding User.EmailError}" TextColor="Red"/>

                <Label Text="{DynamicResource Password}" Margin="0,10,0,0"/>
                <!--<Entry Keyboard="Password" Text="{Binding User.Password}"  PlaceholderColor="{DynamicResource NotSelectedColor}"  Placeholder="{DynamicResource Password}"/>-->
                <Grid>
                    <Entry x:Name="PasswordEntry"
                        Keyboard="Default"
                        Text="{Binding User.Password}"
                        IsPassword="{Binding IsPassword}"
                        PlaceholderColor="{DynamicResource NotSelectedColor}"
                        Placeholder="{DynamicResource Password}"
                        Grid.Column="0"
                       />
                    <ImageButton Source="{Binding EyeImage}"
                                 Command="{Binding TogglePasswordVisibilityCommand}"
                                 BackgroundColor="White"
                                 WidthRequest="20"
                                 HeightRequest="20"
                                 Padding="0"
                                 Margin="0"
                                 Aspect="AspectFit"
                                 HorizontalOptions="End"
                                 VerticalOptions="Center"
                                 MinimumWidthRequest="30"
                                 MinimumHeightRequest="30"
                                 Grid.Column="1"/>
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
            </Grid>
            </VerticalStackLayout>
        </ScrollView>

        <HorizontalStackLayout Grid.Row="3" Grid.ColumnSpan="2" HorizontalOptions="Center" >
            <Label Text="{DynamicResource SwitchBiometric}" VerticalOptions="Center" TextColor="{DynamicResource TextColor}"/>
            <Switch x:Name="BiometricSwitch" 
                    IsToggled="{Binding EnableBiometrics}" 
                    VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <!--<Button Margin="20"  Text="Register Admin" Grid.Row="3" Grid.Column="0" Command="{Binding RegisterAdminCommand}"/>-->
        <Button Grid.Row="4" Grid.ColumnSpan="2" Text="{DynamicResource LanguageButtonText}"
             Command="{Binding SwitchLanguageCommand}" BackgroundColor="{DynamicResource ButtonColor}" TextColor="{DynamicResource ButtonTextColor}"
             HorizontalOptions="Center" />
        <Button Margin="20"  Text="{DynamicResource Login}" Grid.Row="2" Grid.ColumnSpan="2" 
                WidthRequest="200" HorizontalOptions="Center" BackgroundColor="{DynamicResource ButtonColor}" TextColor="{DynamicResource ButtonTextColor}" 
                Command="{Binding LoginCommand}" />
    </Grid>
</ContentPage>