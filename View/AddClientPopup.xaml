<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                xmlns:model="clr-namespace:OrderApp.Model"
                xmlns:viewmodel="clr-namespace:OrderApp.ViewModel"
                x:DataType="viewmodel:AddClientPopupViewModel"
                x:Class="OrderApp.View.AddClientPopup">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Add New Client" FontAttributes="Bold" FontSize="20" />
        <Entry Placeholder="Name" Text="{Binding Client.Name}"/>
        <Entry Placeholder="Details" Text="{Binding Client.Details}"/>
        <!--<Button Text="Save" Command="{Binding AddClientCommand}" />-->
        <Button Text="Save" Clicked="SaveButton_Clicked" />
    </VerticalStackLayout>
</toolkit:Popup>