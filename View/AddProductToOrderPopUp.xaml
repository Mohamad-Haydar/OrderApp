<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                xmlns:model="clr-namespace:OrderApp.Model"
                xmlns:viewmodel="clr-namespace:OrderApp.ViewModel"
                x:DataType="viewmodel:AddProductToOrderPopupViewModel"
                x:Class="OrderApp.View.AddProductToOrderPopUp">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Create New Order" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center"/>

        <!-- Client Picker -->
        <Label Text="Select product:"/>
        <Picker Title="Select a product"
                ItemsSource="{Binding Products}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding Product}">
        </Picker>

        <Label Text="Select Enter Quantity:"/>
        <Entry Text="{Binding Quantity, Mode=TwoWay}" Keyboard="Numeric"  ClearButtonVisibility="WhileEditing" Placeholder="Quantity"/>

        <!-- Buttons -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <!--<Button Text="Cancel" Command="{Binding CloseCommand}" WidthRequest="100"/>
            <Button Text="Add" Command="{Binding AddProductToOrderCommand}" WidthRequest="100"/>-->
            <Button Text="Cancel" Clicked="CancelButton_Clicked" WidthRequest="100"/>
            <Button Text="Add" Clicked="AddButton_Clicked" WidthRequest="100"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>