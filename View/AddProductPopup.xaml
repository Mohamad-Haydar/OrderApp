<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                xmlns:model="clr-namespace:OrderApp.Model"
                xmlns:viewmodel="clr-namespace:OrderApp.ViewModel"
                x:DataType="viewmodel:AddProductPopupViewModel"
                x:Class="OrderApp.View.AddProductPopup">

    <VerticalStackLayout Spacing="7">
       
        <Label Text="Add New Product" FontAttributes="Bold" FontSize="20" />
        <Label Text="Name" FontAttributes="Bold" FontSize="12" />
        <Entry Placeholder="Name" Text="{Binding Product.Name}"/>
        <Label Text="Description" FontAttributes="Bold" FontSize="12" />
        <Entry Placeholder="Description" Text="{Binding Product.Description}"/>
        <Label Text="Price" FontAttributes="Bold" FontSize="12" />
        <Entry Placeholder="Price" Text="{Binding Product.Price}"/>
        <Label Text="Quantity" FontAttributes="Bold" FontSize="12" />
        <Entry Placeholder="Quantity" Text="{Binding Product.Quantity}"/>
        <!--<Button Text="Save" Command="{Binding AddProductCommand}" />-->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Save"  Command="{Binding AddProductCommand}"/>
            <Button Text="Close" Clicked="CloseButton_Clicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>